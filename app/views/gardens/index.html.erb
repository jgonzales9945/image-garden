<h1>Listing gardens</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<% if current_user %>
	  Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
	  <%= link_to 'New Garden', new_garden_path %>
	<% else %>
	  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
	<% end %>
    <% @gardens.each do |garden| %>
      <th>
		
        <td><%= image_tag garden.g_image.url(:small) %> 
		<%= link_to 'Show', garden %>
        <div id = "admin"><%= link_to 'Edit', edit_garden_path(garden) %>
        <%= link_to 'Destroy', garden, method: :delete, data: { confirm: 'Are you sure?' } %> </div></td>
      </th>
    <% end %>
  </tbody>
</table>

<br>


